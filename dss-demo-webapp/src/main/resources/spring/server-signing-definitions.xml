<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="serverSidePKCS12" class="eu.europa.esig.dss.token.Pkcs12SignatureToken">
		<constructor-arg name="ksStream" value="classpath:user_a_rsa.p12" type="java.io.InputStream" />
		<constructor-arg name="ksPassword" value="password" />
	</bean>
	
	<bean id="serverToken" class="eu.europa.esig.dss.token.RemoteSignatureTokenConnectionImpl">
		<property name="token" ref="serverSidePKCS12" />
	</bean>

</beans>