<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:cxf="http://cxf.apache.org/core"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
	
	<!-- SOAP SERVER SIGNING SERVICE -->
    <bean id="soapServerSigningService" class="eu.europa.esig.dss.token.SoapSignatureTokenConnectionImpl">
    	<property name="token" ref="serverToken" />
    </bean>

	<jaxws:endpoint id="jaxwsServerSigningService" implementor="#soapServerSigningService" address="/soap/ServerSigningService">
		<jaxws:features>
			<cxf:logging />
		</jaxws:features>
		<jaxws:properties>
	      <entry key="mtom-enabled" value="true"/>
	    </jaxws:properties>
	</jaxws:endpoint>
	
</beans>